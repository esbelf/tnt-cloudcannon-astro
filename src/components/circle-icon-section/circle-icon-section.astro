---
// Section.astro
// Defines the data structure for the circular items to keep the HTML clean
const topItems = [
  {
    title: "BUYING",
    subtitle: "an Established Practice",
    icon: "key", // Placeholder for icon logic
    color: "text-yellow-500",
  },
  {
    title: "STARTUP",
    subtitle: "Practice",
    icon: "scissors",
    color: "text-red-500",
  },
  {
    title: "STRIVING",
    subtitle: "to Work Less & Make More",
    icon: "woman",
    color: "text-purple-500",
  },
  {
    title: "ADDING",
    subtitle: "an Associate",
    icon: "fishing",
    color: "text-blue-500",
  },
];

const middleLeftItem = {
  title: "ACHIEVING",
  subtitle: "Incremental Growth",
  icon: "plant",
  color: "text-green-600",
};

const middleRightItem = {
  title: "GROWING",
  subtitle: "a Multi-Location Group",
  icon: "puzzle",
  color: "text-indigo-600",
};

const bottomItems = [
  {
    title: "MARKETING",
    subtitle: "a Specialist Practice",
    icon: "doctors",
    color: "text-teal-600",
  },
  {
    title: "POSITIONING",
    subtitle: "Your Practice to Sell",
    icon: "signature",
    color: "text-gray-700",
  },
  {
    title: "EXPANDING",
    subtitle: "Your Practice Aggressively",
    icon: "chart",
    color: "text-orange-500",
  },
  {
    title: "LEADING",
    subtitle: "the Growth of a DSO",
    icon: "leader",
    color: "text-blue-900",
  },
];
---

<section class="bg-[#CBE9EB] py-16 px-4 md:px-8 overflow-hidden font-sans">
  <div class="max-w-7xl mx-auto">
    <!-- Desktop Layout: 4 Column Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-y-12 gap-x-4 items-end">
      <!-- TOP ROW (4 Items) -->
      {
        topItems.map((item) => (
          <div class="flex flex-col items-center text-center group">
            <div class="h-24 w-24 mb-4 relative transition-transform duration-300 group-hover:-translate-y-2">
              {/* Replace this switch with your actual <img src="..." /> */}
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
                class={`w-full h-full ${item.color}`}
              >
                {item.icon === "key" && (
                  <>
                    <path d="m21 2-2 2m-7.6 7.6a6.5 6.5 0 1 1 5.3 5.3L3 21v-3h3v-3h3z" />
                    <path d="M12 12a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                  </>
                )}
                {item.icon === "scissors" && (
                  <>
                    <circle cx="6" cy="6" r="3" />
                    <circle cx="6" cy="18" r="3" />
                    <line x1="20" x2="8.12" y1="4" y2="15.88" />
                    <line x1="14.47" x2="20" y1="14.48" y2="20" />
                    <line x1="8.12" x2="12" y1="8.12" y2="12" />
                  </>
                )}
                {item.icon === "woman" && (
                  <>
                    <path d="M12 21a6 6 0 0 0 6-6c0-1-1-4-6-4s-6 3-6 4a6 6 0 0 0 6 6Z" />
                    <circle cx="12" cy="7" r="4" />
                  </>
                )}
                {item.icon === "fishing" && (
                  <>
                    <path d="M22 22 2 2" />
                    <path d="M19 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                    <path d="m14.5 14.5-2.5 2.5" />
                  </>
                )}
              </svg>
            </div>
            <h3 class="text-slate-900 font-bold uppercase text-lg leading-tight">
              {item.title}
            </h3>
            <p class="text-slate-700 text-sm font-medium">{item.subtitle}</p>
          </div>
        ))
      }

      <!-- MIDDLE ROW -->

      <!-- Middle Left Item -->
      <div class="flex flex-col items-center text-center group">
        <div
          class="h-24 w-24 mb-4 relative transition-transform duration-300 group-hover:-translate-y-2"
        >
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class={`w-full h-full ${middleLeftItem.color}`}
          >
            <path d="M7 20h10"></path><path d="M10 20c5.5-2.5.8-6.4 3-10"
            ></path><path
              d="M9.5 9.4c1.1.8 1.8 2.2 2.3 3.7-2 .4-3.2.4-4.8-.3-1.2-.6-2.3-1.9-3-4.2 2.8-.5 4.4 0 5.5.8Z"
            ></path><path
              d="M14.1 6a7 7 0 0 0-1.1 4c1.9-.1 3.3-.6 4.3-1.4 1-1 1.6-2.3 1.7-4.6-2.7.1-4 1-4.9 2Z"
            ></path>
          </svg>
        </div>
        <h3 class="text-slate-900 font-bold uppercase text-lg leading-tight">
          {middleLeftItem.title}
        </h3>
        <p class="text-slate-700 text-sm font-medium">
          {middleLeftItem.subtitle}
        </p>
      </div>

      <!-- CENTER CONTENT (Spans 2 columns on desktop) -->
      <!-- Order-first on mobile so the text appears at the top, order-none on desktop to sit in the middle -->
      <div
        class="col-span-2 flex flex-col items-center justify-center text-center order-first md:order-none mb-12 md:mb-0 px-2"
      >
        <h2
          class="text-4xl md:text-5xl lg:text-6xl font-black text-slate-800 tracking-tight leading-tight mb-6"
        >
          MARKETING FOR<br />
          DENTISTS <span class="text-[#FF8469]">JUST LIKE YOU</span>
        </h2>
        <p
          class="text-slate-700 text-base md:text-lg leading-relaxed max-w-2xl mx-auto"
        >
          We help dentists of all shapes and sizes with all types of goals and
          visions improve their practices and <strong
            >simplify their lives</strong
          >. Whether you are a start-up, Board Certified Periodontist, or
          Heartland practice; we have worked with another <strong
            >dentist like you</strong
          >. Just click on the icon that best describes you and see how this
          experience and expertise is included in everything we do â€“ our
          compliments!
        </p>
      </div>

      <!-- Middle Right Item -->
      <div class="flex flex-col items-center text-center group">
        <div
          class="h-24 w-24 mb-4 relative transition-transform duration-300 group-hover:-translate-y-2"
        >
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class={`w-full h-full ${middleRightItem.color}`}
          >
            <path
              d="M19.439 15.424a1 1 0 0 0-1.424-1.424l-3.535 3.536-3.536-3.536a1 1 0 0 0-1.424 1.424l3.536 3.535-3.536 3.536a1 1 0 0 0 1.424 1.424l3.536-3.536 3.535 3.536a1 1 0 0 0 1.424-1.424l-3.536-3.536z"
            ></path><path d="M4 10h4v4H4z"></path><path d="M10 4h4v4h-4z"
            ></path><path d="M16 10h4v4h-4z"></path><path d="M10 16h4v4h-4z"
            ></path>
          </svg>
        </div>
        <h3 class="text-slate-900 font-bold uppercase text-lg leading-tight">
          {middleRightItem.title}
        </h3>
        <p class="text-slate-700 text-sm font-medium">
          {middleRightItem.subtitle}
        </p>
      </div>

      <!-- BOTTOM ROW (4 Items) -->
      {
        bottomItems.map((item) => (
          <div class="flex flex-col items-center text-center group">
            <div class="h-24 w-24 mb-4 relative transition-transform duration-300 group-hover:-translate-y-2">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
                class={`w-full h-full ${item.color}`}
              >
                {item.icon === "doctors" && (
                  <>
                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                    <circle cx="9" cy="7" r="4" />
                    <path d="M22 21v-2a4 4 0 0 0-3-3.87" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                  </>
                )}
                {item.icon === "signature" && (
                  <>
                    <path d="M20 19.5v.5a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h8.5L20 7.5V11" />
                    <path d="M8 18h1" />
                    <path d="M18.4 9.6a2 2 0 1 1 3 3L17 17l-4 1 1-4Z" />
                  </>
                )}
                {item.icon === "chart" && (
                  <>
                    <path d="M3 3v18h18" />
                    <path d="m19 9-5 5-4-4-3 3" />
                  </>
                )}
                {item.icon === "leader" && (
                  <>
                    <path d="M16 20V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" />
                    <rect width="20" height="14" x="2" y="6" rx="2" />
                  </>
                )}
              </svg>
            </div>
            <h3 class="text-slate-900 font-bold uppercase text-lg leading-tight">
              {item.title}
            </h3>
            <p class="text-slate-700 text-sm font-medium">{item.subtitle}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
