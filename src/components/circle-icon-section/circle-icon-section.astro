---
interface Props {
  primary_content: string;
  secondary_content: string;
}
const { primary_content, secondary_content } = Astro.props;

const icons = import.meta.glob("../../assets/icons/*.svg", {
  as: "raw",
  eager: true,
});
// Defines the data structure for the circular items to keep the HTML clean
const topItems = [
  {
    title: "BUYING",
    subtitle: "an Established Practice",
    icon: icons["../../assets/icons/buying.svg"], // Placeholder for icon logic
    color: "text-yellow-500",
  },
  {
    title: "STARTUP",
    subtitle: "Practice",
    icon: icons["../../assets/icons/startup.svg"],
    color: "text-red-500",
  },
  {
    title: "STRIVING",
    subtitle: "to Work Less & Make More",
    icon: icons["../../assets/icons/striving.svg"],
    color: "text-purple-500",
  },
  {
    title: "ADDING",
    subtitle: "an Associate",
    icon: icons["../../assets/icons/adding.svg"],
    color: "text-blue-500",
  },
];

const middleLeftItem = {
  title: "ACHIEVING",
  subtitle: "Incremental Growth",
  icon: icons["../../assets/icons/achieving.svg"],
  color: "text-green-600",
};

const middleRightItem = {
  title: "GROWING",
  subtitle: "a Multi-Location Group",
  icon: icons["../../assets/icons/growing.svg"],
  color: "text-indigo-600",
};

const bottomItems = [
  {
    title: "MARKETING",
    subtitle: "a Specialist Practice",
    icon: icons["../../assets/icons/marketing.svg"],
    color: "text-teal-600",
  },
  {
    title: "POSITIONING",
    subtitle: "Your Practice to Sell",
    icon: icons["../../assets/icons/positioning.svg"],
    color: "text-gray-700",
  },
  {
    title: "EXPANDING",
    subtitle: "Your Practice Aggressively",
    icon: icons["../../assets/icons/expanding.svg"],
    color: "text-orange-500",
  },
  {
    title: "LEADING",
    subtitle: "the Growth of a DSO",
    icon: icons["../../assets/icons/leading.svg"],
    color: "text-blue-900",
  },
];
---

<section class="bg-[#CBE9EB] py-16 px-4 md:px-8 overflow-hidden font-sans">
  <div class="max-w-full mx-auto">
    <!-- Desktop Layout: 4 Column Grid -->
    <div class="grid grid-cols-2 md:grid-cols-8 gap-y-12 gap-x-4 items-end">
      <!-- TOP ROW (4 Items) -->
      {
        topItems.map((item, index) => (
          <div
            class={`col-span-2 flex flex-col items-center text-center group ${index === 1 || index === 2 ? "pb-16" : ""}`}
          >
            <div class="mb-4 relative transition-transform duration-300 group-hover:-translate-y-2">
              <span
                class={""}
                style={`width:${4}rem;height:${4}rem`}
                set:html={item["icon"]}
              />
            </div>
            <h3 class="text-slate-900 font-bold uppercase text-lg leading-tight">
              {item.title}
            </h3>
            <p class="text-slate-700 text-sm font-medium">{item.subtitle}</p>
          </div>
        ))
      }

      <!-- MIDDLE ROW -->

      <!-- Middle Left Item -->
      <div class="h-full flex flex-col justify-center items-start">
        <div
          class="flex flex-col justify-center items-center text-center group"
        >
          <div
            class="mb-4 relative transition-transform duration-300 group-hover:-translate-y-2"
          >
            <span
              class={""}
              style={`width:${4}rem;height:${4}rem`}
              set:html={middleLeftItem["icon"]}
            />
          </div>
          <h3 class="text-slate-900 font-bold uppercase text-lg leading-tight">
            {middleLeftItem.title}
          </h3>
          <p class="text-slate-700 text-sm font-medium">
            {middleLeftItem.subtitle}
          </p>
        </div>
      </div>

      <!-- CENTER CONTENT (Spans 2 columns on desktop) -->
      <!-- Order-first on mobile so the text appears at the top, order-none on desktop to sit in the middle -->
      <div
        class="col-span-6 flex flex-col items-center justify-center text-center order-first md:order-none mb-12 md:mb-0 px-2"
      >
        <h2
          class="text-7xl font-black text-slate-800 tracking-tight leading-tight mb-6"
          set:html={primary_content}
        />
        <p
          class="text-slate-700 text-base leading-relaxed max-w-2xl mx-auto"
          set:html={secondary_content}
        />
      </div>

      <!-- Middle Right Item -->
      <div class="h-full flex flex-col justify-center items-end">
        <div
          class="flex flex-col justify-center items-center text-center group"
        >
          <div
            class="mb-4 relative transition-transform duration-300 group-hover:-translate-y-2"
          >
            <span
              class={""}
              style={`width:${4}rem;height:${4}rem`}
              set:html={middleRightItem["icon"]}
            />
          </div>
          <h3 class="text-slate-900 font-bold uppercase text-lg leading-tight">
            {middleRightItem.title}
          </h3>
          <p class="text-slate-700 text-sm font-medium">
            {middleRightItem.subtitle}
          </p>
        </div>
      </div>

      <!-- BOTTOM ROW (4 Items) -->
      {
        bottomItems.map((item, index) => (
          <div
            class={`col-span-2 flex flex-col items-center text-center group ${index === 0 || index === 3 ? "pb-16" : ""}`}
          >
            <div class="mb-4 relative transition-transform duration-300 group-hover:-translate-y-2">
              <span
                class={""}
                style={`width:${4}rem;height:${4}rem`}
                set:html={item["icon"]}
              />
            </div>
            <h3 class="text-slate-900 font-bold uppercase text-lg leading-tight">
              {item.title}
            </h3>
            <p class="text-slate-700 text-sm font-medium">{item.subtitle}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
