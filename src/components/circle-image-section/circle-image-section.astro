---
interface Props {
  background_color: string;
  header_content: string;
  subheader_content: string;
}
const { background_color, header_content, subheader_content } = Astro.props;
const backgroundStyle = background_color
  ? `background-color: ${background_color};`
  : "";

const partnerImages = import.meta.glob("../../assets/images/partners/*.svg", {
  as: "raw",
  eager: true,
});
---

<div style={backgroundStyle}>
  <div class="w-full mx-auto flex flex-col gap-16 relative py-16 px-12">
    <div class="flex flex-row justify-center items-center gap-32">
      <div class="flex-1 flex flex-col items-end">
        <span
          set:html={partnerImages[
            "../../assets/images/partners/dental-intelligence.svg"
          ]}
          style={`width:auto;height:4rem`}
        />
      </div>
      <div class="flex-1 flex flex-col items-start">
        <span
          set:html={partnerImages[
            "../../assets/images/partners/google-partner.svg"
          ]}
          style={`width:auto;height:4rem`}
        />
      </div>
    </div>

    <div
      class="flex flex-col lg:flex-row justify-between items-center gap-12 lg:gap-8"
    >
      <div
        class="flex flex-col gap-16 lg:gap-32 items-center lg:items-start order-2 lg:order-1 flex-1"
      >
        <div class="text-center lg:text-left">
          <span
            set:html={partnerImages[
              "../../assets/images/partners/ada-certificate.svg"
            ]}
            style={`width:auto;height:4rem`}
          />
        </div>
        <div
          class="flex flex-col lg:flex-row items-center lg:items-start gap-4 text-center lg:text-left"
        >
          <span
            set:html={partnerImages[
              "../../assets/images/partners/ux-design-institute.svg"
            ]}
            style={`width:auto;height:4rem`}
          />
        </div>
      </div>

      <div class="text-center order-1 lg:order-2 flex-[2.5] z-10">
        <h1
          set:html={header_content}
          class="text-secondary text-7xl font-black uppercase leading-none mb-6"
        />
        <p
          class="text-base text-secondary font-normal leading-relaxed md:px-8"
          set:html={subheader_content}
        />
      </div>

      <div
        class="flex flex-col gap-16 lg:gap-32 items-center lg:items-end order-3 flex-1"
      >
        <div class="text-center lg:text-right">
          <span
            set:html={partnerImages[
              "../../assets/images/partners/curve-partner.svg"
            ]}
            style={`width:auto;height:4rem`}
          />
        </div>
        <div
          class="flex flex-col lg:flex-row-reverse items-center lg:items-start gap-4 text-center lg:text-right"
        >
          <span
            set:html={partnerImages[
              "../../assets/images/partners/pace-partner.svg"
            ]}
            style={`width:auto;height:4rem`}
          />
        </div>
      </div>
    </div>

    <div class="flex flex-row justify-center items-center gap-32">
      <div class="flex-1 flex flex-col items-end">
        <span
          set:html={partnerImages["../../assets/images/partners/facebook.svg"]}
          style={`width:auto;height:4rem`}
        />
      </div>
      <div class="flex-1 flex flex-col items-start">
        <span
          set:html={partnerImages[
            "../../assets/images/partners/weave-partner.svg"
          ]}
          style={`width:auto;height:4rem`}
        />
      </div>
    </div>
  </div>
</div>
