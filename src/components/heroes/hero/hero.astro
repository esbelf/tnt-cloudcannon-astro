---
import type { ImageMetadata } from "astro";
import Markdown from "../../utility/markdown.astro";
import heroBackground from "../../../assets/images/hero/hero-background.jpg";

interface Props {
  heading: {
    text_span: string;
    text_primary: string;
    text_secondary: string;
    heading_gradient_color: string;
  };
}

const { heading } = Astro.props;

const headingGradientColor = heading.heading_gradient_color;

const backgroundStyle = `background-image: url('${heroBackground.src}');`;
---

<section
  style={backgroundStyle}
  class="relative w-full overflow-hidden bg-cover bg-center bg-no-repeat min-h-[50rem]"
  aria-labelledby="hero-heading-text"
>
  <div class="absolute bottom-0 left-0 text-center text-white p-4">
    <div class="text-left">
      <span class="text-xs font-medium text-white">{heading.text_span}</span>
      <h1 class="text-8xl font-black text-white">{heading.text_primary}</h1>
      <h1 class="text-8xl font-black text-primary">
        {heading.text_secondary}
      </h1>
    </div>
  </div>
</section>

<style is:global>
  .subheading-text .markdown-text p {
    margin-bottom: 0;
  }
</style>

<style define:vars={{ headingGradientColor }}>
  .hero-container {
    display: flex;
    flex-direction: column;
    gap: 20px;
    justify-content: space-between;
    align-items: center;
    padding-top: calc(var(--sectionPaddingMobile) * 2);
    padding-bottom: var(--sectionPaddingMobile);
    padding-inline: var(--pagePadding);
    max-width: var(--pageContainer);
    margin-inline: auto;
    overflow: hidden;
  }
  .content h1 {
    font-size: 2rem;
    line-height: 100%;
    font-weight: 700;
    text-wrap: balance;
    background: -webkit-linear-gradient(to left, #eee 50%, #333);
    background: linear-gradient(
      to left,
      var(--headingGradientColor) 50%,
      #000000
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .content {
    display: flex;
    flex-direction: column;
  }
  .content .subheading-text {
    margin-top: 1rem;
    max-width: 72ch;
  }
  .buttons {
    display: flex;
    flex-direction: column;
    gap: 1.75rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .hero-image {
    width: 100%;
    max-width: 600px;
    margin-top: 32px;
    display: flex;
    justify-content: center;
  }
  @media only screen and (min-width: 320px) {
    .content h1 {
      font-size: 2.5rem;
    }
  }
  @media only screen and (min-width: 400px) {
    .content h1 {
      font-size: 3rem;
    }
    .buttons {
      flex-direction: row;
      flex-wrap: wrap;
    }
  }
  @media only screen and (min-width: 660px) {
    .content h1,
    .content .subheading-text {
      text-align: center;
    }
    .buttons {
      justify-content: center;
    }
  }
  @media only screen and (min-width: 768px) {
    .hero-container {
      padding-top: calc(var(--sectionPadding) * 2);
      padding-bottom: var(--sectionPadding);
    }
  }
  @media only screen and (min-width: 960px) {
    .hero-container {
      flex-direction: row;
    }
    .content h1,
    .content .subheading-text {
      text-align: start;
    }
    .content h1 {
      font-size: 4rem;
    }
    .buttons {
      justify-content: start;
    }
  }
</style>
